

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          String     @id @default(cuid())
  firstName   String
  lastName    String
  email       String   @unique
  phone       String?  // Optional, as per create account form
  role        role   // e.g., "Admin"
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum role {
  ADMIN
  COACH
}

